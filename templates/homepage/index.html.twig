<div class="container my-5">
    <!-- Featured Events Banner -->
    {{ include('components/featured_events_banner.html.twig', { display_type: 'banner' }) }}
    
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-calendar-plus"></i> Upcoming Events</h2>
                <a href="{{ path('events_list') }}" class="btn btn-outline-primary">View All Events</a>
            </div>
        </div>
    </div>

    {% if upcoming_events|length > 0 %}
        <div class="row g-4">
            {% for event in upcoming_events %}
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm">
                        {% if event.bannerImage %}
                            <img src="{{ asset('uploads/events/' ~ event.bannerImage) }}" class="card-img-top" alt="{{ event.title }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-calendar-event text-muted" style="font-size: 3rem;"></i>
                            </div>
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ event.title }}</h5>
                            <p class="card-text flex-grow-1">{{ event.description|slice(0, 120) }}{% if event.description|length > 120 %}...{% endif %}</p>
                            
                            <div class="mt-auto">
                                <div class="d-flex align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> {{ event.startDate|date('M j, Y \\a\\t g:i A') }}
                                    </small>
                                </div>
                                {% if event.location %}
                                    <div class="d-flex align-items-center mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt"></i> {{ event.location }}
                                        </small>
                                    </div>
                                {% endif %}
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        {{ event.attendeesCount }} attendees
                                    </small>
                                    <a href="{{ path('event_show', {slug: event.slug}) }}" class="btn btn-primary btn-sm">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
            <h3 class="text-muted mt-3">No upcoming events</h3>
            <p class="text-muted">Check back later for new events, or browse past events.</p>
            <a href="{{ path('events_list', {filter: 'all'}) }}" class="btn btn-outline-primary">Browse All Events</a>
        </div>
    {% endif %}
</div>

<div class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="text-center">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-person-plus-fill" style="font-size: 1.5rem;"></i>
                    </div>
                    <h5>Easy Registration</h5>
                    <p class="text-muted">Quick and simple event registration with email verification.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="text-center">
                    <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-download" style="font-size: 1.5rem;"></i>
                    </div>
                    <h5>Digital Resources</h5>
                    <p class="text-muted">Access presentations, documents, and other materials instantly.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="text-center">
                    <div class="bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-card-text" style="font-size: 1.5rem;"></i>
                    </div>
                    <h5>Digital Badges</h5>
                    <p class="text-muted">Get custom printed badges for easy event check-in.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="text-center">
                    <div class="bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-shield-check" style="font-size: 1.5rem;"></i>
                    </div>
                    <h5>Secure Access</h5>
                    <p class="text-muted">Email-based authentication ensures secure access to event content.</p>
                </div>
            </div>
        </div>
    </div>
</div>
