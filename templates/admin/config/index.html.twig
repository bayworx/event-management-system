{% extends 'admin/base.html.twig' %}

{% block title %}Application Configuration - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">Application Configuration</h1>
                    <small class="text-muted">Manage company information and application preferences</small>
                </div>
                <div class="btn-group" role="group">
                    <a href="{{ path('admin_config_export') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-download"></i> Export Config
                    </a>
                    <form method="post" action="{{ path('admin_config_clear_cache') }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('clear_cache') }}">
                        <button type="submit" class="btn btn-outline-warning btn-sm" 
                                onclick="return confirm('Are you sure you want to clear the configuration cache?')">
                            <i class="bi bi-arrow-clockwise"></i> Clear Cache
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Configuration Navigation Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-building text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Company Information</h5>
                    <p class="card-text text-muted">
                        Configure company name, description, contact details, and logo
                    </p>
                    <a href="{{ path('admin_config_company') }}" class="btn btn-primary">
                        <i class="bi bi-gear"></i> Configure
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-sliders text-info" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Application Preferences</h5>
                    <p class="card-text text-muted">
                        Set timezone, date formats, pagination, and other app preferences
                    </p>
                    <a href="{{ path('admin_config_application') }}" class="btn btn-info">
                        <i class="bi bi-gear"></i> Configure
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-envelope text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Email Settings</h5>
                    <p class="card-text text-muted">
                        Configure default email sender, signatures, and mail preferences
                    </p>
                    <a href="{{ path('admin_config_email') }}" class="btn btn-success">
                        <i class="bi bi-gear"></i> Configure
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-layout-text-window-reverse text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Footer Settings</h5>
                    <p class="card-text text-muted">
                        Configure footer content, links, social media, and copyright information
                    </p>
                    <a href="{{ path('admin_config_footer') }}" class="btn btn-warning">
                        <i class="bi bi-gear"></i> Configure
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Current Configuration Overview -->
    {% if configurations is not empty %}
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Configuration Overview</h5>
                </div>
                <div class="card-body">
                    <div class="accordion" id="configAccordion">
                        {% for category, configs in configurations %}
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading{{ category }}">
                                <button class="accordion-button{% if loop.index > 1 %} collapsed{% endif %}" type="button" 
                                        data-bs-toggle="collapse" data-bs-target="#collapse{{ category }}" 
                                        aria-expanded="{% if loop.index == 1 %}true{% else %}false{% endif %}" 
                                        aria-controls="collapse{{ category }}">
                                    <i class="bi bi-{% if category == 'Company' %}building{% elseif category == 'Application' %}sliders{% elseif category == 'Email' %}envelope{% elseif category == 'Footer' %}layout-text-window-reverse{% else %}gear{% endif %} me-2"></i>
                                    {{ category }} Settings
                                    <span class="badge bg-secondary ms-2">{{ configs|length }}</span>
                                </button>
                            </h2>
                            <div id="collapse{{ category }}" 
                                 class="accordion-collapse collapse{% if loop.index == 1 %} show{% endif %}" 
                                 aria-labelledby="heading{{ category }}" 
                                 data-bs-parent="#configAccordion">
                                <div class="accordion-body">
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th style="width: 30%;">Setting</th>
                                                    <th style="width: 40%;">Value</th>
                                                    <th>Description</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for config in configs %}
                                                <tr>
                                                    <td>
                                                        <code>{{ config.configKey }}</code>
                                                    </td>
                                                    <td>
                                                        {% if config.valueType == 'boolean' %}
                                                            {% if config.typedValue %}
                                                                <span class="badge bg-success">Enabled</span>
                                                            {% else %}
                                                                <span class="badge bg-secondary">Disabled</span>
                                                            {% endif %}
                                                        {% elseif config.configValue|length > 50 %}
                                                            <span class="text-muted">{{ config.configValue|slice(0, 50) }}...</span>
                                                        {% else %}
                                                            {{ config.configValue ?: '<span class="text-muted">Not set</span>'|raw }}
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-muted small">
                                                        {{ config.description }}
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Reset Defaults (Hidden by default) -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Danger Zone
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        Reset configuration to default values. This will restore any missing default settings 
                        but won't overwrite your existing configurations.
                    </p>
                    <form method="post" action="{{ path('admin_config_reset_defaults') }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('reset_defaults') }}">
                        <button type="submit" class="btn btn-outline-danger" 
                                onclick="return confirm('Are you sure you want to restore default configuration values? This will not overwrite existing settings.')">
                            <i class="bi bi-arrow-counterclockwise"></i> Restore Defaults
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}