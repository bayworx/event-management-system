{% extends 'admin/base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-envelope"></i> Messages</h1>
                {% if unread_count > 0 %}
                    <span class="badge bg-danger">{{ unread_count }} unread</span>
                {% endif %}
            </div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="event" class="form-label">Event</label>
                            <select name="event" id="event" class="form-select">
                                <option value="">All Events</option>
                                {% for event in managed_events %}
                                    <option value="{{ event.id }}" {% if current_event and current_event.id == event.id %}selected{% endif %}>
                                        {{ event.title }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="status" class="form-label">Status</label>
                            <select name="status" id="status" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="sent" {% if current_status == 'sent' %}selected{% endif %}>Sent</option>
                                <option value="read" {% if current_status == 'read' %}selected{% endif %}>Read</option>
                                <option value="replied" {% if current_status == 'replied' %}selected{% endif %}>Replied</option>
                                <option value="archived" {% if current_status == 'archived' %}selected{% endif %}>Archived</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="unread_only" id="unread_only" value="1" {% if unread_only %}checked{% endif %}>
                                <label class="form-check-label" for="unread_only">
                                    Unread only
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-outline-primary">Filter</button>
                                <a href="{{ path('admin_message_index') }}" class="btn btn-outline-secondary">Clear</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bulk Actions -->
            {% if messages|length > 0 %}
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="post" action="{{ path('admin_message_bulk_action') }}" id="bulk-form">
                            <div class="row g-3 align-items-end">
                                <div class="col-md-3">
                                    <label class="form-label">Bulk Actions</label>
                                    <select name="action" class="form-select" required>
                                        <option value="">Select action...</option>
                                        <option value="mark_read">Mark as read</option>
                                        <option value="archive">Archive</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-outline-primary" onclick="return confirm('Apply action to selected messages?')">
                                        Apply to Selected
                                    </button>
                                </div>
                                <div class="col-md-6 text-end">
                                    {% if unread_count > 0 %}
                                        <form method="post" action="{{ path('admin_message_mark_all_read') }}" class="d-inline">
                                            {% if current_event %}
                                                <input type="hidden" name="event_id" value="{{ current_event.id }}">
                                            {% endif %}
                                            <button type="submit" class="btn btn-outline-success" onclick="return confirm('Mark all messages as read?')">
                                                <i class="bi bi-check-all"></i> Mark All Read
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Messages List -->
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="50">
                                        <input type="checkbox" id="select-all">
                                    </th>
                                    <th width="60">Status</th>
                                    <th>From</th>
                                    <th>Event</th>
                                    <th>Subject</th>
                                    <th>Priority</th>
                                    <th width="150">Date</th>
                                    <th width="150">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for message in messages %}
                                    <tr class="{% if not message.isRead %}table-warning{% endif %}">
                                        <td>
                                            <input type="checkbox" name="message_ids[]" value="{{ message.id }}" form="bulk-form">
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ message.priorityColor }}">
                                                {{ message.statusLabel }}
                                            </span>
                                        </td>
                                        <td>
                                            <div>
                                                <strong>{{ message.sender.name }}</strong>
                                                <br><small class="text-muted">{{ message.sender.email }}</small>
                                            </div>
                                        </td>
                                        <td>
                                            <small>{{ message.event.title }}</small>
                                        </td>
                                        <td>
                                            <div>
                                                <strong>{{ message.subject }}</strong>
                                                {% if not message.isRead %}
                                                    <i class="bi bi-circle-fill text-primary" style="font-size: 0.6em;"></i>
                                                {% endif %}
                                                <br><small class="text-muted">{{ message.getShortContent(80) }}</small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ message.priorityColor }}">
                                                {{ message.priorityLabel }}
                                            </span>
                                        </td>
                                        <td>
                                            <small>{{ message.sentAt|date('M j, Y g:i A') }}</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('admin_message_show', {id: message.id}) }}" 
                                                   class="btn btn-outline-primary" title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('admin_message_reply', {id: message.id}) }}" 
                                                   class="btn btn-outline-success" title="Reply">
                                                    <i class="bi bi-reply"></i>
                                                </a>
                                                {% if message.status != 'archived' %}
                                                    <form method="post" action="{{ path('admin_message_archive', {id: message.id}) }}" class="d-inline">
                                                        <button type="submit" class="btn btn-outline-secondary" title="Archive" 
                                                                onclick="return confirm('Archive this message?')">
                                                            <i class="bi bi-archive"></i>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(messages) }}
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    {% if unread_only %}
                        No unread messages found.
                    {% else %}
                        No messages found.
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
document.getElementById('select-all').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('input[name="message_ids[]"]');
    checkboxes.forEach(checkbox => {
        checkbox.checked = this.checked;
    });
});
</script>
{% endblock %}