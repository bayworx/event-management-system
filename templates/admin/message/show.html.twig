{% extends 'admin/base.html.twig' %}

{% block title %}Message: {{ message.subject }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-envelope-open"></i> Message Details</h1>
                <div>
                    <a href="{{ path('admin_message_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Messages
                    </a>
                    <a href="{{ path('admin_message_reply', {id: message.id}) }}" class="btn btn-success">
                        <i class="bi bi-reply"></i> Reply
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <!-- Main Message -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1">{{ message.subject }}</h5>
                                    <small class="text-muted">
                                        From: <strong>{{ message.sender.name }}</strong> &lt;{{ message.sender.email }}&gt;
                                    </small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-{{ message.priorityColor }} mb-2">{{ message.priorityLabel }}</span>
                                    <br>
                                    <small class="text-muted">{{ message.sentAt|date('M j, Y \\a\\t g:i A') }}</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="message-content">
                                {{ message.content|nl2br }}
                            </div>
                        </div>
                    </div>

                    <!-- Conversation Thread -->
                    {% if thread|length > 1 %}
                        <div class="card">
                            <div class="card-header">
                                <h6><i class="bi bi-chat-dots"></i> Conversation Thread</h6>
                            </div>
                            <div class="card-body">
                                {% for msg in thread %}
                                    {% if msg.id != message.id %}
                                        <div class="border-start border-3 border-{{ msg.priorityColor }} ps-3 mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <div>
                                                    <strong>{{ msg.subject }}</strong>
                                                    {% if msg.isReply %}
                                                        <span class="badge bg-info">Reply</span>
                                                    {% endif %}
                                                </div>
                                                <small class="text-muted">{{ msg.sentAt|date('M j, Y g:i A') }}</small>
                                            </div>
                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    From: {{ msg.sender.name }} &lt;{{ msg.sender.email }}&gt;
                                                </small>
                                            </div>
                                            <div class="message-content">
                                                {{ msg.content|nl2br }}
                                            </div>
                                        </div>
                                        {% if not loop.last %}
                                            <hr>
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="col-lg-4">
                    <!-- Message Info -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6><i class="bi bi-info-circle"></i> Message Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-{{ message.priorityColor }}">{{ message.statusLabel }}</span>
                                </dd>

                                <dt class="col-sm-4">Priority:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-{{ message.priorityColor }}">{{ message.priorityLabel }}</span>
                                </dd>

                                <dt class="col-sm-4">Event:</dt>
                                <dd class="col-sm-8">
                                    <a href="{{ path('admin_event_show', {id: message.event.id}) }}">
                                        {{ message.event.title }}
                                    </a>
                                </dd>

                                <dt class="col-sm-4">Sent:</dt>
                                <dd class="col-sm-8">{{ message.sentAt|date('M j, Y \\a\\t g:i A') }}</dd>

                                {% if message.readAt %}
                                    <dt class="col-sm-4">Read:</dt>
                                    <dd class="col-sm-8">{{ message.readAt|date('M j, Y \\a\\t g:i A') }}</dd>
                                {% endif %}

                                {% if message.isReply and message.replyTo %}
                                    <dt class="col-sm-4">Reply to:</dt>
                                    <dd class="col-sm-8">
                                        <a href="{{ path('admin_message_show', {id: message.replyTo.id}) }}">
                                            {{ message.replyTo.subject }}
                                        </a>
                                    </dd>
                                {% endif %}
                            </dl>
                        </div>
                    </div>

                    <!-- Sender Info -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6><i class="bi bi-person"></i> Sender Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">{{ message.sender.name }}</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:{{ message.sender.email }}">{{ message.sender.email }}</a>
                                </dd>

                                {% if message.sender.phone %}
                                    <dt class="col-sm-4">Phone:</dt>
                                    <dd class="col-sm-8">{{ message.sender.phone }}</dd>
                                {% endif %}

                                {% if message.sender.organization %}
                                    <dt class="col-sm-4">Organization:</dt>
                                    <dd class="col-sm-8">{{ message.sender.organization }}</dd>
                                {% endif %}

                                {% if message.sender.jobTitle %}
                                    <dt class="col-sm-4">Job Title:</dt>
                                    <dd class="col-sm-8">{{ message.sender.jobTitle }}</dd>
                                {% endif %}

                                <dt class="col-sm-4">Registered:</dt>
                                <dd class="col-sm-8">{{ message.sender.registeredAt|date('M j, Y') }}</dd>

                                <dt class="col-sm-4">Verified:</dt>
                                <dd class="col-sm-8">
                                    {% if message.sender.isVerified %}
                                        <span class="badge bg-success">Yes</span>
                                    {% else %}
                                        <span class="badge bg-warning">No</span>
                                    {% endif %}
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="card">
                        <div class="card-header">
                            <h6><i class="bi bi-gear"></i> Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="{{ path('admin_message_reply', {id: message.id}) }}" class="btn btn-success">
                                    <i class="bi bi-reply"></i> Reply to Message
                                </a>
                                
                                {% if not message.isRead %}
                                    <form method="post" action="{{ path('admin_message_mark_read', {id: message.id}) }}">
                                        <button type="submit" class="btn btn-outline-primary w-100">
                                            <i class="bi bi-check"></i> Mark as Read
                                        </button>
                                    </form>
                                {% endif %}

                                {% if message.status != 'archived' %}
                                    <form method="post" action="{{ path('admin_message_archive', {id: message.id}) }}">
                                        <button type="submit" class="btn btn-outline-secondary w-100" onclick="return confirm('Archive this message?')">
                                            <i class="bi bi-archive"></i> Archive Message
                                        </button>
                                    </form>
                                {% endif %}

                                <a href="mailto:{{ message.sender.email }}?subject=Re: {{ message.subject|url_encode }}" class="btn btn-outline-info">
                                    <i class="bi bi-envelope"></i> Email Directly
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.message-content {
    white-space: pre-wrap;
    word-wrap: break-word;
}
</style>
{% endblock %}