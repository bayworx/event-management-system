{% extends 'admin/base.html.twig' %}

{% block title %}Import Preview - {{ import.filename }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-search"></i> Import Preview</h1>
                <div>
                    <a href="{{ path('admin_import_show', {id: import.id}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Import
                    </a>
                    <form method="post" action="{{ path('admin_import_execute', {id: import.id}) }}" class="d-inline">
                        <button type="submit" class="btn btn-success" onclick="return confirm('Execute this import? This will create/update data in your system.')">
                            <i class="bi bi-play-fill"></i> Execute Import
                        </button>
                    </form>
                </div>
            </div>

            <!-- Import Summary -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="bi bi-file-text text-primary fs-1"></i>
                            <h6 class="card-title">File</h6>
                            <p class="mb-0">{{ import.filename }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="bi bi-list text-info fs-1"></i>
                            <h6 class="card-title">Import Type</h6>
                            <p class="mb-0">{{ import.importTypeLabel }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="bi bi-table text-success fs-1"></i>
                            <h6 class="card-title">Total Rows</h6>
                            <p class="mb-0">{{ data.total_rows }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="bi bi-columns text-warning fs-1"></i>
                            <h6 class="card-title">Columns</h6>
                            <p class="mb-0">{{ data.headers|length }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Column Mapping -->
            {% if data.mapping_suggestions is not empty %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-diagram-3"></i> Suggested Column Mapping</h5>
                        <small class="text-muted">Based on your file headers, we've suggested the following column mappings:</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {% for expectedField, suggestedColumn in data.mapping_suggestions %}
                                <div class="col-md-4 mb-3">
                                    <div class="d-flex align-items-center">
                                        <strong class="me-2">{{ expectedField }}:</strong>
                                        <span class="badge bg-success">{{ suggestedColumn }}</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Headers Detected -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-list-ul"></i> File Headers</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        {% for header in data.headers %}
                            <div class="col-md-3 mb-2">
                                <span class="badge bg-primary">{{ header }}</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Data Preview -->
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-table"></i> Data Preview</h5>
                    <small class="text-muted">Showing first {{ data.records|length }} rows of {{ data.total_rows }} total rows</small>
                </div>
                <div class="card-body">
                    {% if data.records is not empty %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th width="50">#</th>
                                        {% for header in data.headers %}
                                            <th>{{ header }}</th>
                                        {% endfor %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for index, record in data.records %}
                                        {% if loop.index <= 20 %} {# Show only first 20 rows in preview #}
                                            <tr>
                                                <td class="text-muted">{{ loop.index }}</td>
                                                {% for header in data.headers %}
                                                    <td>
                                                        <span class="d-inline-block text-truncate" style="max-width: 200px;" title="{{ record[header] ?? '' }}">
                                                            {{ record[header] ?? '' }}
                                                        </span>
                                                    </td>
                                                {% endfor %}
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    {% if data.records|length > 20 %}
                                        <tr>
                                            <td colspan="{{ data.headers|length + 1 }}" class="text-center text-muted">
                                                ... and {{ data.records|length - 20 }} more preview rows ({{ data.total_rows }} total)
                                            </td>
                                        </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            No data rows found in the uploaded file.
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Expected Columns Info -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6><i class="bi bi-info-circle"></i> Expected Columns for {{ import.importTypeLabel }}</h6>
                </div>
                <div class="card-body">
                    {% if data.expected_columns is not empty %}
                        <div class="row">
                            {% for expectedField, variations in data.expected_columns %}
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-2">
                                        <strong>{{ expectedField }}:</strong>
                                        <div class="mt-1">
                                            {% for variation in variations %}
                                                <span class="badge bg-light text-dark me-1">{{ variation }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="alert alert-info mt-3">
                            <small>
                                <i class="bi bi-lightbulb"></i>
                                <strong>Note:</strong> Your CSV file headers should match one of the variations shown above for each expected column.
                                The import service will attempt to automatically map your headers to the correct fields.
                            </small>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Execute Confirmation Modal -->
<div class="modal fade" id="executeModal" tabindex="-1" aria-labelledby="executeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="executeModalLabel">Execute Import</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to execute this import?</p>
                <div class="alert alert-warning">
                    <strong>Warning:</strong> This will create new records in your database. 
                    Make sure you have reviewed the data preview carefully.
                </div>
                <ul>
                    <li>File: <strong>{{ import.filename }}</strong></li>
                    <li>Import Type: <strong>{{ import.importTypeLabel }}</strong></li>
                    <li>Total Rows: <strong>{{ data.total_rows }}</strong></li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" action="{{ path('admin_import_execute', {id: import.id}) }}" class="d-inline">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-play-fill"></i> Execute Import
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.table th, .table td {
    vertical-align: middle;
}

.text-truncate {
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
</style>
{% endblock %}