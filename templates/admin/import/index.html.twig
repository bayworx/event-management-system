{% extends 'admin/base.html.twig' %}

{% block title %}Event Imports{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-upload"></i> Event Imports</h1>
                <a href="{{ path('admin_import_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> New Import
                </a>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="bi bi-upload text-primary fs-1"></i>
                            <h5 class="card-title">Total Imports</h5>
                            <h3 class="text-primary">{{ stats.total }}</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="bi bi-check-circle text-success fs-1"></i>
                            <h5 class="card-title">Completed</h5>
                            <h3 class="text-success">{{ stats.completed }}</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="bi bi-exclamation-circle text-danger fs-1"></i>
                            <h5 class="card-title">Failed</h5>
                            <h3 class="text-danger">{{ stats.failed }}</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="bi bi-arrow-repeat text-primary fs-1"></i>
                            <h5 class="card-title">Processing</h5>
                            <h3 class="text-primary">{{ stats.processing }}</h3>
                        </div>
                    </div>
                </div>
            </div>

            {% if imports|length > 0 %}
                <!-- Bulk Actions -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="post" action="{{ path('admin_import_bulk_delete') }}" id="bulk-form">
                            <div class="row g-3 align-items-end">
                                <div class="col-md-6">
                                    <label class="form-label">Bulk Actions</label>
                                    <button type="submit" class="btn btn-outline-danger" 
                                            onclick="return confirm('Delete selected import records? This cannot be undone.')">
                                        <i class="bi bi-trash"></i> Delete Selected
                                    </button>
                                </div>
                                <div class="col-md-6 text-end">
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                                        <form method="post" action="{{ path('admin_import_cleanup') }}" class="d-inline">
                                            <button type="submit" class="btn btn-outline-secondary" 
                                                    onclick="return confirm('Clean up import records older than 30 days?')">
                                                <i class="bi bi-trash3"></i> Cleanup Old Records
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Imports List -->
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="50">
                                        <input type="checkbox" id="select-all">
                                    </th>
                                    <th>File</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Progress</th>
                                    <th>Created By</th>
                                    <th>Created At</th>
                                    <th width="150">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for import in imports %}
                                    <tr>
                                        <td>
                                            {% if import.status in ['completed', 'failed', 'cancelled'] %}
                                                <input type="checkbox" name="import_ids[]" value="{{ import.id }}" form="bulk-form">
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div>
                                                <strong>{{ import.filename }}</strong>
                                                <br><small class="text-muted">{{ import.totalRows }} rows</small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">{{ import.importTypeLabel }}</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ import.statusColor }}">{{ import.statusLabel }}</span>
                                            {% if import.status == 'processing' %}
                                                <div class="spinner-border spinner-border-sm ms-2" role="status">
                                                    <span class="visually-hidden">Processing...</span>
                                                </div>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if import.totalRows > 0 %}
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar bg-success" role="progressbar" 
                                                         style="width: {{ import.successRate }}%" 
                                                         aria-valuenow="{{ import.successRate }}" aria-valuemin="0" aria-valuemax="100">
                                                        {{ import.successfulRows }}/{{ import.totalRows }}
                                                    </div>
                                                </div>
                                                <small class="text-muted">
                                                    Success: {{ import.successfulRows }}, 
                                                    Failed: {{ import.failedRows }}
                                                </small>
                                            {% else %}
                                                <small class="text-muted">No data</small>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {{ import.createdBy.name }}
                                            <br><small class="text-muted">{{ import.createdBy.email }}</small>
                                        </td>
                                        <td>
                                            <small>{{ import.createdAt|date('M j, Y g:i A') }}</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('admin_import_show', {id: import.id}) }}" 
                                                   class="btn btn-outline-primary" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                {% if import.status == 'pending' %}
                                                    <a href="{{ path('admin_import_preview', {id: import.id}) }}" 
                                                       class="btn btn-outline-info" title="Preview">
                                                        <i class="bi bi-search"></i>
                                                    </a>
                                                {% endif %}
                                                {% if import.status in ['pending', 'processing'] %}
                                                    <form method="post" action="{{ path('admin_import_cancel', {id: import.id}) }}" class="d-inline">
                                                        <button type="submit" class="btn btn-outline-warning" title="Cancel" 
                                                                onclick="return confirm('Cancel this import?')">
                                                            <i class="bi bi-x-lg"></i>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                                {% if import.status in ['completed', 'failed', 'cancelled'] %}
                                                    <form method="post" action="{{ path('admin_import_delete', {id: import.id}) }}" class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-import-' ~ import.id) }}">
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete" 
                                                                onclick="return confirm('Delete this import record?')">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(imports) }}
                </div>
            {% else %}
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card text-center">
                            <div class="card-body py-5">
                                <i class="bi bi-upload display-1 text-muted mb-3"></i>
                                <h3>No Imports Yet</h3>
                                <p class="text-muted mb-4">
                                    You haven't created any imports yet. Upload a CSV or Excel file to get started.
                                </p>
                                <a href="{{ path('admin_import_new') }}" class="btn btn-primary">
                                    <i class="bi bi-plus-lg"></i> Create Your First Import
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
document.getElementById('select-all').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('input[name="import_ids[]"]');
    checkboxes.forEach(checkbox => {
        checkbox.checked = this.checked;
    });
});

// Auto-refresh for processing imports
{% for import in imports %}
    {% if import.status == 'processing' %}
        setTimeout(() => {
            window.location.reload();
        }, 10000); // Refresh every 10 seconds if there are processing imports
        break;
    {% endif %}
{% endfor %}
</script>
{% endblock %}