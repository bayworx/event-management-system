{% extends 'base.html.twig' %}

{% block navbar %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ path('admin_dashboard') }}">ðŸ“… {{ company_config().name ?: 'BAYWORX EMS' }} - Admin</a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}" 
                       href="{{ path('admin_dashboard') }}">Dashboard</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle {% if app.request.get('_route') starts with 'admin_event' or app.request.get('_route') starts with 'admin_featured_events' or app.request.get('_route') starts with 'admin_presenter' or app.request.get('_route') starts with 'admin_attendee' %}active{% endif %}" 
                       href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Events
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('admin_event_index') }}">Events</a></li>
                        <li><a class="dropdown-item" href="{{ path('admin_featured_events_index') }}">
                            <i class="bi bi-star"></i> Featured Events
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('admin_presenter_index') }}">Presenters</a></li>
                        <li><a class="dropdown-item" href="{{ path('admin_attendee_index') }}">Attendees</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'admin_message' %}active{% endif %}" 
                       href="{{ path('admin_message_index') }}">
                        <i class="bi bi-envelope"></i> Messages
                        {% set unread_count = admin_unread_message_count() %}
                        {% if unread_count > 0 %}
                            <span class="badge bg-danger">{{ unread_count }}</span>
                        {% endif %}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'admin_import' %}active{% endif %}" 
                       href="{{ path('admin_import_index') }}">
                        <i class="bi bi-upload"></i> Import
                    </a>
                </li>
                {% if app.user.isSuperAdmin %}
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'admin_user' %}active{% endif %}" 
                       href="{{ path('admin_user_index') }}">Administrators</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'admin_config' %}active{% endif %}" 
                       href="{{ path('admin_config_index') }}">
                        <i class="bi bi-gear"></i> Configuration
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'admin_logs' %}active{% endif %}" 
                       href="{{ path('admin_logs_index') }}">
                        <i class="bi bi-file-text"></i> Application Logs
                    </a>
                </li>
                {% endif %}
            </ul>
            
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        {{ app.user.name ? app.user.name : app.user.email }}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="{{ path('admin_profile_show') }}">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('admin_logout') }}">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>
{% endblock %}
