{% extends 'admin/base.html.twig' %}

{% block title %}Featured Events Management{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Featured Events Management</h1>
    <div class="btn-group" role="group">
        <a href="{{ path('admin_featured_events_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Featured Event
        </a>
        <div class="btn-group" role="group">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="fas fa-cog me-2"></i>Actions
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" href="{{ path('admin_featured_events_analytics') }}">
                        <i class="fas fa-chart-line me-2"></i>Analytics
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form action="{{ path('admin_featured_events_clear_cache') }}" method="post" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('clear-cache') }}">
                        <button type="submit" class="dropdown-item">
                            <i class="fas fa-sync me-2"></i>Clear Cache
                        </button>
                    </form>
                </li>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <li>
                    <form action="{{ path('admin_featured_events_cleanup') }}" method="post" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('cleanup') }}">
                        <button type="submit" class="dropdown-item text-warning" onclick="return confirm('Clean up all expired featured events?')">
                            <i class="fas fa-trash me-2"></i>Cleanup Expired
                        </button>
                    </form>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">{{ statistics.totalActive }}</h4>
                        <p class="card-text">Active Features</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-star fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">{{ statistics.totalViews|number_format }}</h4>
                        <p class="card-text">Total Views</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-eye fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">{{ statistics.totalClicks|number_format }}</h4>
                        <p class="card-text">Total Clicks</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-mouse-pointer fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">{{ statistics.averageCTR }}%</h4>
                        <p class="card-text">Avg. CTR</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-percentage fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Expiring Soon Alert -->
{% if expiring_soon|length > 0 %}
<div class="alert alert-warning mb-4">
    <h5 class="alert-heading">
        <i class="fas fa-exclamation-triangle me-2"></i>Featured Events Expiring Soon
    </h5>
    <p class="mb-2">The following featured events will expire within the next 7 days:</p>
    <ul class="mb-0">
        {% for featured_event in expiring_soon %}
            <li>
                <strong>{{ featured_event.title }}</strong> - expires {{ featured_event.endDate|date('M j, Y g:i A') }}
                <a href="{{ path('admin_featured_events_edit', {id: featured_event.id}) }}" class="btn btn-sm btn-outline-primary ms-2">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endif %}

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Status Filter</label>
                <select name="status" class="form-select">
                    <option value="">All Status</option>
                    <option value="active"{% if current_filters.status == 'active' %} selected{% endif %}>Active Only</option>
                    <option value="inactive"{% if current_filters.status == 'inactive' %} selected{% endif %}>Inactive Only</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Display Type</label>
                <select name="display_type" class="form-select">
                    <option value="">All Types</option>
                    <option value="banner"{% if current_filters.display_type == 'banner' %} selected{% endif %}>Banner</option>
                    <option value="card"{% if current_filters.display_type == 'card' %} selected{% endif %}>Card</option>
                    <option value="sidebar"{% if current_filters.display_type == 'sidebar' %} selected{% endif %}>Sidebar</option>
                    <option value="popup"{% if current_filters.display_type == 'popup' %} selected{% endif %}>Popup</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-filter me-2"></i>Apply Filters
                    </button>
                    <a href="{{ path('admin_featured_events_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Featured Events Table -->
<div class="card">
    <div class="card-body">
        {% if featured_events|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Display Type</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Views / Clicks</th>
                            <th>CTR</th>
                            <th>Date Range</th>
                            <th>Created By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for featured_event in featured_events %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% if featured_event.effectiveBannerImage %}
                                            <img src="{{ featured_event.effectiveBannerImage }}" alt="{{ featured_event.title }}" class="me-2 rounded" style="width: 50px; height: 30px; object-fit: cover;">
                                        {% else %}
                                            <div class="me-2 bg-light rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 30px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        {% endif %}
                                        <div>
                                            <strong>{{ featured_event.title }}</strong>
                                            {% if featured_event.relatedEvent %}
                                                <br><small class="text-muted">Event: {{ featured_event.relatedEvent.title }}</small>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">{{ featured_event.displayType|title }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ featured_event.priority }}</span>
                                </td>
                                <td>
                                    {% if featured_event.isCurrentlyActive %}
                                        <span class="badge bg-success">Active</span>
                                    {% elseif featured_event.isActive %}
                                        <span class="badge bg-warning">Scheduled</span>
                                    {% else %}
                                        <span class="badge bg-danger">Inactive</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="d-flex justify-content-between">
                                        <span><i class="fas fa-eye text-muted me-1"></i>{{ featured_event.viewCount }}</span>
                                        <span><i class="fas fa-mouse-pointer text-muted me-1"></i>{{ featured_event.clickCount }}</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge {% if featured_event.clickThroughRate > 5 %}bg-success{% elseif featured_event.clickThroughRate > 2 %}bg-warning{% else %}bg-danger{% endif %}">
                                        {{ featured_event.clickThroughRate }}%
                                    </span>
                                </td>
                                <td>
                                    {% if featured_event.startDate or featured_event.endDate %}
                                        <small>
                                            {% if featured_event.startDate %}
                                                From: {{ featured_event.startDate|date('M j, Y') }}<br>
                                            {% endif %}
                                            {% if featured_event.endDate %}
                                                Until: {{ featured_event.endDate|date('M j, Y') }}
                                            {% endif %}
                                        </small>
                                    {% else %}
                                        <small class="text-muted">Always</small>
                                    {% endif %}
                                </td>
                                <td>{{ featured_event.createdBy.name }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('admin_featured_events_show', {id: featured_event.id}) }}" class="btn btn-outline-primary" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_featured_events_edit', {id: featured_event.id}) }}" class="btn btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ path('admin_featured_events_toggle', {id: featured_event.id}) }}" method="post" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle-featured-event-' ~ featured_event.id) }}">
                                            <button type="submit" class="btn btn-outline-{% if featured_event.isActive %}danger{% else %}success{% endif %}" title="{% if featured_event.isActive %}Deactivate{% else %}Activate{% endif %}">
                                                <i class="fas fa-{% if featured_event.isActive %}pause{% else %}play{% endif %}"></i>
                                            </button>
                                        </form>
                                        <form action="{{ path('admin_featured_events_delete', {id: featured_event.id}) }}" method="post" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete-featured-event-' ~ featured_event.id) }}">
                                            <button type="submit" class="btn btn-outline-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this featured event?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if featured_events.pageCount > 1 %}
                <nav class="mt-4">
                    {{ knp_pagination_render(featured_events) }}
                </nav>
            {% endif %}
        {% else %}
            <div class="text-center py-4">
                <i class="fas fa-star fa-3x text-muted mb-3"></i>
                <h5>No featured events found</h5>
                <p class="text-muted">Create your first featured event to get started.</p>
                <a href="{{ path('admin_featured_events_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create Featured Event
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}