{% extends 'admin/base.html.twig' %}

{% block title %}My Profile - Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 text-dark">
                    <i class="bi bi-person-circle me-2"></i>
                    My Profile
                </h1>
                <a href="{{ path('admin_profile_edit') }}" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-1"></i>
                    Edit Profile
                </a>
            </div>

            {% include 'admin/_flash_messages.html.twig' %}
            
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Profile Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Name:</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ administrator.name }}
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Email:</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ administrator.email }}
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Department:</strong>
                                </div>
                                <div class="col-sm-9">
                                    {% if administrator.department %}
                                        {{ administrator.department }}
                                    {% else %}
                                        <span class="text-muted">Not specified</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Role:</strong>
                                </div>
                                <div class="col-sm-9">
                                    {% if administrator.isSuperAdmin %}
                                        <span class="badge bg-danger">Super Administrator</span>
                                    {% else %}
                                        <span class="badge bg-primary">Administrator</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Status:</strong>
                                </div>
                                <div class="col-sm-9">
                                    {% if administrator.isActive %}
                                        <span class="badge bg-success">Active</span>
                                    {% else %}
                                        <span class="badge bg-danger">Inactive</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Member since:</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ administrator.createdAt|date('F j, Y') }}
                                    <small class="text-muted">({{ administrator.createdAt|time_diff }})</small>
                                </div>
                            </div>
                            
                            {% if administrator.lastLoginAt %}
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Last login:</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ administrator.lastLoginAt|date('F j, Y g:i A') }}
                                    <small class="text-muted">({{ administrator.lastLoginAt|time_diff }})</small>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Quick Stats</h5>
                        </div>
                        <div class="card-body">
                            {% set managedEventsCount = administrator.managedEvents|length %}
                            {% set activeEventsCount = 0 %}
                            {% set upcomingEventsCount = 0 %}
                            
                            {% for event in administrator.managedEvents %}
                                {% if event.isActive %}
                                    {% set activeEventsCount = activeEventsCount + 1 %}
                                {% endif %}
                                {% if event.startDate > date() %}
                                    {% set upcomingEventsCount = upcomingEventsCount + 1 %}
                                {% endif %}
                            {% endfor %}
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>Managed Events:</span>
                                <strong>{{ managedEventsCount }}</strong>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>Active Events:</span>
                                <strong>{{ activeEventsCount }}</strong>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span>Upcoming Events:</span>
                                <strong>{{ upcomingEventsCount }}</strong>
                            </div>
                            
                            {% if managedEventsCount > 0 %}
                                <hr>
                                <a href="{{ path('admin_event_index') }}" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="bi bi-calendar-event me-1"></i>
                                    View My Events
                                </a>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Security</h5>
                        </div>
                        <div class="card-body">
                            <p class="small text-muted mb-3">
                                Keep your account secure by using a strong password and keeping your profile information up to date.
                            </p>
                            
                            <a href="{{ path('admin_profile_edit') }}" class="btn btn-outline-warning btn-sm w-100">
                                <i class="bi bi-key me-1"></i>
                                Change Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}