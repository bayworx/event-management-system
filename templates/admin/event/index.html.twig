{% extends 'admin/base.html.twig' %}

{% block title %}Event Management - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">Event Management</h1>
                    <small class="text-muted">Manage your events</small>
                </div>
                <div class="btn-group" role="group">
                    <a href="{{ path('admin_event_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Event
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    {{ form_start(filter_form, {'attr': {'class': 'row g-3 align-items-end'}}) }}
                        <div class="col-md-6">
                            {{ form_widget(filter_form.search) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_label(filter_form.status) }}
                            {{ form_widget(filter_form.status) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_label(filter_form.dateRange) }}
                            {{ form_widget(filter_form.dateRange) }}
                        </div>
                        <div class="col-md-2">
                            <div class="d-grid gap-2 d-md-flex">
                                <button type="submit" class="btn btn-outline-primary btn-sm flex-grow-1">
                                    <i class="bi bi-search"></i> Filter
                                </button>
                                <a href="{{ path('admin_event_index') }}" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-x-circle"></i> Clear
                                </a>
                            </div>
                        </div>
                    {{ form_end(filter_form) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Events Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    {% if pagination.items|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Event</th>
                                        <th>Date</th>
                                        <th>Attendees</th>
                                        <th>Agenda</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for event in pagination.items %}
                                        <tr {% if not event.isActive %}class="table-secondary"{% endif %}>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if event.bannerImage %}
                                                        <img src="{{ asset('uploads/events/' ~ event.bannerImage) }}" 
                                                             alt="{{ event.title }}" 
                                                             class="me-3 rounded" 
                                                             style="width: 50px; height: 50px; object-fit: cover;">
                                                    {% else %}
                                                        <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center me-3" 
                                                             style="width: 50px; height: 50px; font-size: 1.2rem;">
                                                            <i class="bi bi-calendar-event"></i>
                                                        </div>
                                                    {% endif %}
                                                    <div>
                                                        <div class="fw-semibold">{{ event.title }}</div>
                                                        {% if event.location %}
                                                            <small class="text-muted">
                                                                <i class="bi bi-geo-alt"></i> {{ event.location }}
                                                            </small>
                                                        {% endif %}
                                                        {% if event.description %}
                                                            <small class="text-muted d-block">
                                                                {{ event.description|slice(0, 80) }}{% if event.description|length > 80 %}...{% endif %}
                                                            </small>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-semibold">{{ event.startDate|date('M j, Y') }}</div>
                                                    <small class="text-muted">{{ event.startDate|date('g:i A') }}</small>
                                                    {% if event.endDate %}
                                                        <small class="text-muted d-block">
                                                            to {{ event.endDate|date('M j, Y g:i A') }}
                                                        </small>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <span class="fw-semibold">{{ event.attendeesCount }}</span>
                                                    {% if event.maxAttendees %}
                                                        / {{ event.maxAttendees }}
                                                    {% endif %}
                                                </div>
                                                {% if event.maxAttendees %}
                                                    {% set percentage = (event.attendeesCount / event.maxAttendees * 100)|round %}
                                                    <div class="progress mt-1" style="height: 4px;">
                                                        <div class="progress-bar 
                                                                    {% if percentage >= 90 %}bg-danger
                                                                    {% elseif percentage >= 70 %}bg-warning
                                                                    {% else %}bg-success{% endif %}" 
                                                             style="width: {{ percentage }}%"></div>
                                                    </div>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                {% set agendaCount = event.agendaItems ? event.agendaItems|length : 0 %}
                                                <span class="fs-5 fw-bold text-{% if agendaCount > 0 %}primary{% else %}muted{% endif %}">{{ agendaCount }}</span>
                                                <div><small class="text-muted">agenda item{% if agendaCount != 1 %}s{% endif %}</small></div>
                                            </td>
                                            <td>
                                                {% if event.isActive %}
                                                    {% set now = date() %}
                                                    {% if event.startDate > now %}
                                                        <span class="badge bg-success">Upcoming</span>
                                                    {% elseif event.endDate and event.endDate >= now %}
                                                        <span class="badge bg-primary">Ongoing</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">Past</span>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="badge bg-danger">Inactive</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <small class="text-muted">{{ event.createdAt|date('M j, Y') }}</small>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="{{ path('event_show', {'slug': event.slug}) }}" 
                                                       class="btn btn-sm btn-success" 
                                                       data-bs-toggle="tooltip" 
                                                       title="View Public Page"
                                                       target="_blank">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
							&nbsp;
                                                    <a href="{{ path('admin_event_show', {'id': event.id}) }}" 
                                                       class="btn btn-sm btn-secondary" 
                                                       data-bs-toggle="tooltip" 
                                                       title="View Details">
                                                        <i class="bi bi-info-circle"></i>
                                                    </a>
							&nbsp;
                                                    <a href="{{ path('admin_event_edit', {'id': event.id}) }}" 
                                                       class="btn btn-sm btn-primary" 
                                                       data-bs-toggle="tooltip" 
                                                       title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
							&nbsp;
                                                    <a href="{{ path('admin_agenda_index', {'eventId': event.id}) }}" 
                                                       class="btn btn-sm btn-secondary" 
                                                       data-bs-toggle="tooltip" 
                                                       title="Manage Event Agenda ({{ event.agendaItems ? event.agendaItems|length : 0 }} items)">
                                                        <i class="bi bi-calendar2-event"></i>
                                                    </a>
                                                    	&nbsp; 
                                                    <!-- Toggle Status -->
                                                    <form method="post" 
                                                          action="{{ path('admin_event_toggle_status', {'id': event.id}) }}" 
                                                          class="d-inline">
                                                        <input type="hidden" 
                                                               name="_token" 
                                                               value="{{ csrf_token('toggle-status-' ~ event.id) }}">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-{% if event.isActive %}warning{% else %}success{% endif %}" 
                                                                data-bs-toggle="tooltip" 
                                                                title="{% if event.isActive %}Deactivate{% else %}Activate{% endif %}"
                                                                onclick="return confirm('Are you sure you want to {% if event.isActive %}deactivate{% else %}activate{% endif %} this event?')">
                                                            <i class="bi bi-{% if event.isActive %}pause{% else %}play{% endif %}"></i>
                                                        </button>
                                                    </form>
                                                   	&nbsp; 
                                                    <!-- Clone -->
                                                    <form method="post" 
                                                          action="{{ path('admin_event_clone', {'id': event.id}) }}" 
                                                          class="d-inline">
                                                        <input type="hidden" 
                                                               name="_token" 
                                                               value="{{ csrf_token('clone-' ~ event.id) }}">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-info" 
                                                                data-bs-toggle="tooltip" 
                                                                title="Clone Event">
                                                            <i class="bi bi-clipboard"></i>
                                                        </button>
                                                    </form>
                                                   	&nbsp; 
                                                    <!-- Delete -->
                                                    <form method="post" 
                                                          action="{{ path('admin_event_delete', {'id': event.id}) }}" 
                                                          class="d-inline">
                                                        <input type="hidden" 
                                                               name="_token" 
                                                               value="{{ csrf_token('delete-' ~ event.id) }}">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-danger" 
                                                                data-bs-toggle="tooltip" 
                                                                title="Delete"
                                                                onclick="return confirm('Are you sure you want to delete this event? This action cannot be undone and will remove all attendees and files.')">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <div class="text-muted small">
                                {% set currentPageFirstItem = (pagination.currentPageNumber - 1) * pagination.itemNumberPerPage + 1 %}
                                {% set currentPageLastItem = min(pagination.currentPageNumber * pagination.itemNumberPerPage, pagination.totalItemCount) %}
                                Showing {{ currentPageFirstItem }} to {{ currentPageLastItem }} of {{ pagination.totalItemCount }} events
                            </div>
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                            <h5 class="text-muted mt-3">No events found</h5>
                            <p class="text-muted">No events match your current filters.</p>
                            <a href="{{ path('admin_event_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Create First Event
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Initialize tooltips
var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl)
})
</script>
{% endblock %}
