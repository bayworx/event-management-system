{% extends 'admin/base.html.twig' %}

{% block title %}Add Administrator - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">Add Administrator</h1>
                    <small class="text-muted">Create a new administrator account</small>
                </div>
                <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Users
                </a>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.department) }}
                                {{ form_widget(form.department) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.department) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.plainPassword.first) }}
                                {{ form_widget(form.plainPassword.first) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.plainPassword.first) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.plainPassword.second) }}
                                {{ form_widget(form.plainPassword.second) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.plainPassword.second) }}
                                </div>
                            </div>
                        </div>

                        {% if form.plainPassword.vars.help %}
                        <div class="row">
                            <div class="col-12 mb-3">
                                <div class="form-text">{{ form.plainPassword.vars.help }}</div>
                            </div>
                        </div>
                        {% endif %}

                        <div class="row">
                            <div class="col-12 mb-3">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">Permissions</h6>
                                        
                                        <div class="form-check mb-2">
                                            {{ form_widget(form.isActive) }}
                                            {{ form_label(form.isActive) }}
                                            {% if form.isActive.vars.help %}
                                                <div class="form-text">{{ form.isActive.vars.help }}</div>
                                            {% endif %}
                                            <div class="invalid-feedback d-block">
                                                {{ form_errors(form.isActive) }}
                                            </div>
                                        </div>

                                        {% if form.isSuperAdmin is defined %}
                                        <div class="form-check">
                                            {{ form_widget(form.isSuperAdmin) }}
                                            {{ form_label(form.isSuperAdmin) }}
                                            {% if form.isSuperAdmin.vars.help %}
                                                <div class="form-text">{{ form.isSuperAdmin.vars.help }}</div>
                                            {% endif %}
                                            <div class="invalid-feedback d-block">
                                                {{ form_errors(form.isSuperAdmin) }}
                                            </div>
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="{{ path('admin_user_index') }}" class="btn btn-secondary">
                                        Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-plus-circle"></i> Create Administrator
                                    </button>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}