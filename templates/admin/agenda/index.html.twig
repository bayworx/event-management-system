{% extends 'admin/base.html.twig' %}

{% block title %}Manage Agenda - {{ event.title }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-2">Manage Agenda</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_event_index') }}">Events</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_event_show', {id: event.id}) }}">{{ event.title }}</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Agenda</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a href="{{ path('admin_event_show', {id: event.id}) }}" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i> Back to Event
                    </a>
                    <a href="{{ path('admin_agenda_new', {eventId: event.id}) }}" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Add Agenda Item
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>{{ event.title }} - Agenda Items
                        </h5>
                        <small class="text-muted">{{ agenda_items|length }} item(s)</small>
                    </div>
                </div>
                <div class="card-body">
                    {% if agenda_items is empty %}
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Agenda Items</h5>
                            <p class="text-muted mb-4">Get started by adding your first agenda item.</p>
                            <a href="{{ path('admin_agenda_new', {eventId: event.id}) }}" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Add First Agenda Item
                            </a>
                        </div>
                    {% else %}
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="btn-group btn-group-sm" role="group">
                                    <input type="radio" class="btn-check" name="view-type" id="timeline-view" autocomplete="off" checked>
                                    <label class="btn btn-outline-primary" for="timeline-view">
                                        <i class="fas fa-clock me-1"></i> Timeline View
                                    </label>
                                    
                                    <input type="radio" class="btn-check" name="view-type" id="list-view" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="list-view">
                                        <i class="fas fa-list me-1"></i> List View
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 text-end">
                                <button type="button" class="btn btn-sm btn-outline-secondary" id="toggle-reorder">
                                    <i class="fas fa-arrows-alt me-1"></i> Reorder Items
                                </button>
                            </div>
                        </div>

                        <div id="agenda-items-container" class="sortable-list">
                            {% for item in agenda_items %}
                                <div class="agenda-item card mb-3 {{ not item.visible ? 'agenda-item-hidden' : '' }}" data-id="{{ item.id }}">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-8">
                                                <div class="d-flex align-items-start">
                                                    <div class="drag-handle me-3 text-muted" style="display: none;">
                                                        <i class="fas fa-grip-vertical"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <div class="d-flex align-items-center mb-2">
                                                            <h6 class="mb-0 me-2">{{ item.title }}</h6>
                                                            {% if not item.visible %}
                                                                <span class="badge bg-secondary">Hidden</span>
                                                            {% endif %}
                                                            {% if item.itemType %}
                                                                <span class="badge bg-info ms-2">{{ item.itemType|title }}</span>
                                                            {% endif %}
                                                        </div>
                                                        
                                                        <div class="text-muted small mb-2">
                                                            {% if item.startTime %}
                                                                <i class="fas fa-clock me-1"></i>
                                                                {{ item.startTime|date('H:i') }}
                                                                {% if item.endTime %}
                                                                    - {{ item.endTime|date('H:i') }}
                                                                {% endif %}
                                                            {% endif %}
                                                            
                                                            {% if item.speaker %}
                                                                <i class="fas fa-user ms-3 me-1"></i>{{ item.speaker }}
                                                            {% endif %}
                                                            
                                                            {% if item.presenter %}
                                                                <i class="fas fa-microphone ms-3 me-1"></i>{{ item.presenter.name }}
                                                            {% endif %}
                                                            
                                                            {% if item.location %}
                                                                <i class="fas fa-map-marker-alt ms-3 me-1"></i>{{ item.location }}
                                                            {% endif %}
                                                        </div>
                                                        
                                                        {% if item.description %}
                                            <p class="text-muted mb-0 small">{{ item.description|length > 100 ? item.description|slice(0, 100) ~ '...' : item.description }}</p>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 text-end">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_agenda_show', {id: item.id}) }}" class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_agenda_edit', {id: item.id}) }}" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    
                                                    <div class="btn-group" role="group">
                                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                            <i class="fas fa-ellipsis-v"></i>
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <form method="post" action="{{ path('admin_agenda_toggle_visibility', {id: item.id}) }}" class="d-inline">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle-visibility-' ~ item.id) }}">
                                                                    <button type="submit" class="dropdown-item">
                                                                        <i class="fas fa-{{ item.visible ? 'eye-slash' : 'eye' }} me-2"></i>
                                                                        {{ item.visible ? 'Hide' : 'Show' }}
                                                                    </button>
                                                                </form>
                                                            </li>
                                                            <li>
                                                                <form method="post" action="{{ path('admin_agenda_duplicate', {id: item.id}) }}" class="d-inline">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('duplicate-agenda-' ~ item.id) }}">
                                                                    <button type="submit" class="dropdown-item">
                                                                        <i class="fas fa-copy me-2"></i> Duplicate
                                                                    </button>
                                                                </form>
                                                            </li>
                                                            <li><hr class="dropdown-divider"></li>
                                                            <li>
                                                                <form method="post" action="{{ path('admin_agenda_delete', {id: item.id}) }}" class="d-inline delete-form">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-agenda-' ~ item.id) }}">
                                                                    <button type="submit" class="dropdown-item text-danger">
                                                                        <i class="fas fa-trash me-2"></i> Delete
                                                                    </button>
                                                                </form>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        
                        <form id="reorder-form" method="post" action="{{ path('admin_agenda_reorder', {eventId: event.id}) }}" style="display: none;">
                            <!-- Items will be added by JavaScript -->
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.agenda-item-hidden {
    opacity: 0.6;
}

.sortable-list {
    min-height: 50px;
}

.sortable-list .agenda-item {
    cursor: grab;
    transition: all 0.3s ease;
}

.sortable-list .agenda-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.sortable-list .agenda-item.sortable-chosen {
    cursor: grabbing;
}

.drag-handle {
    cursor: grab;
}

.badge {
    font-size: 0.75em;
}
</style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize sortable
            const container = document.getElementById('agenda-items-container');
            let sortable;
            
            const toggleReorderBtn = document.getElementById('toggle-reorder');
            const dragHandles = document.querySelectorAll('.drag-handle');
            let reorderMode = false;
            
            function initSortable() {
                if (sortable) {
                    sortable.destroy();
                }
                
                sortable = Sortable.create(container, {
                    handle: '.drag-handle',
                    disabled: !reorderMode,
                    onEnd: function(evt) {
                        const items = Array.from(container.children).map(item => item.dataset.id);
                        
                        // Update form with new order
                        const form = document.getElementById('reorder-form');
                        form.innerHTML = '';
                        
                        items.forEach((itemId, index) => {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = `items[${index}]`;
                            input.value = itemId;
                            form.appendChild(input);
                        });
                        
                        // Submit form
                        form.submit();
                    }
                });
            }
            
            toggleReorderBtn?.addEventListener('click', function() {
                reorderMode = !reorderMode;
                
                if (reorderMode) {
                    this.innerHTML = '<i class="fas fa-check me-1"></i> Finish Reordering';
                    this.classList.remove('btn-outline-secondary');
                    this.classList.add('btn-success');
                    
                    dragHandles.forEach(handle => handle.style.display = 'block');
                } else {
                    this.innerHTML = '<i class="fas fa-arrows-alt me-1"></i> Reorder Items';
                    this.classList.remove('btn-success');
                    this.classList.add('btn-outline-secondary');
                    
                    dragHandles.forEach(handle => handle.style.display = 'none');
                }
                
                initSortable();
            });
            
            // Initialize sortable
            initSortable();
            
            // Delete confirmation
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    if (confirm('Are you sure you want to delete this agenda item? This action cannot be undone.')) {
                        this.submit();
                    }
                });
            });
        });
    </script>
{% endblock %}