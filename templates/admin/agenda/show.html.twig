{% extends 'admin/base.html.twig' %}

{% block title %}{{ agenda_item.title }} - Agenda Item Details{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-2">{{ agenda_item.title }}</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_event_index') }}">Events</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_event_show', {id: agenda_item.event.id}) }}">{{ agenda_item.event.title }}</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_agenda_index', {eventId: agenda_item.event.id}) }}">Agenda</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{ agenda_item.title }}</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a href="{{ path('admin_agenda_edit', {id: agenda_item.id}) }}" class="btn btn-primary me-2">
                        <i class="fas fa-edit me-1"></i> Edit Item
                    </a>
                    <a href="{{ path('admin_agenda_index', {eventId: agenda_item.event.id}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Agenda
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="fas fa-calendar-check me-2"></i>{{ agenda_item.title }}
                                </h5>
                                <div>
                                    {% if not agenda_item.visible %}
                                        <span class="badge bg-secondary">Hidden</span>
                                    {% else %}
                                        <span class="badge bg-success">Visible</span>
                                    {% endif %}
                                    {% if agenda_item.itemType %}
                                        <span class="badge bg-info ms-2">{{ agenda_item.itemType|title }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <h6><i class="fas fa-clock me-2 text-muted"></i>Timing</h6>
                                    <div class="ms-4">
                                        {% if agenda_item.startTime %}
                                            <p class="mb-1">
                                                <strong>Start:</strong> {{ agenda_item.startTime|date('F j, Y g:i A') }}
                                            </p>
                                        {% endif %}
                                        {% if agenda_item.endTime %}
                                            <p class="mb-1">
                                                <strong>End:</strong> {{ agenda_item.endTime|date('F j, Y g:i A') }}
                                            </p>
                                        {% endif %}
                                        {% if agenda_item.startTime and agenda_item.endTime %}
                                            {% set duration = (agenda_item.endTime.timestamp - agenda_item.startTime.timestamp) / 60 %}
                                            <p class="mb-0 text-muted">
                                                <small>Duration: {{ duration }} minutes</small>
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="fas fa-map-marker-alt me-2 text-muted"></i>Location</h6>
                                    <div class="ms-4">
                                        {% if agenda_item.location %}
                                            <p class="mb-0">{{ agenda_item.location }}</p>
                                        {% else %}
                                            <p class="mb-0 text-muted">No location specified</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            {% if agenda_item.speaker or agenda_item.presenter %}
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6><i class="fas fa-microphone me-2 text-muted"></i>Speaker/Presenter</h6>
                                        <div class="ms-4">
                                            {% if agenda_item.speaker %}
                                                <p class="mb-1">
                                                    <strong>Speaker:</strong> {{ agenda_item.speaker }}
                                                    <span class="badge bg-light text-dark">External</span>
                                                </p>
                                            {% endif %}
                                            {% if agenda_item.presenter %}
                                                <p class="mb-0">
                                                    <strong>Presenter:</strong> {{ agenda_item.presenter.name }}
                                                    <span class="badge bg-primary">Registered</span>
                                                </p>
                                                {% if agenda_item.presenter.email %}
                                                    <p class="mb-0 text-muted small">
                                                        <i class="fas fa-envelope me-1"></i>{{ agenda_item.presenter.email }}
                                                    </p>
                                                {% endif %}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            {% if agenda_item.description %}
                                <div class="mb-4">
                                    <h6><i class="fas fa-align-left me-2 text-muted"></i>Description</h6>
                                    <div class="ms-4">
                                        <div class="border-start border-primary ps-3">
                                            {{ agenda_item.description|nl2br }}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            <div class="row">
                                <div class="col-md-6">
                                    <h6><i class="fas fa-info-circle me-2 text-muted"></i>Item Details</h6>
                                    <div class="ms-4">
                                        <p class="mb-1"><strong>Sort Order:</strong> {{ agenda_item.sortOrder }}</p>
                                        <p class="mb-1"><strong>Created:</strong> {{ agenda_item.createdAt|date('F j, Y g:i A') }}</p>
                                        {% if agenda_item.updatedAt %}
                                            <p class="mb-0"><strong>Last Updated:</strong> {{ agenda_item.updatedAt|date('F j, Y g:i A') }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="fas fa-calendar me-2 text-muted"></i>Event Details</h6>
                                    <div class="ms-4">
                                        <p class="mb-1"><strong>Event:</strong> 
                                            <a href="{{ path('admin_event_show', {id: agenda_item.event.id}) }}">{{ agenda_item.event.title }}</a>
                                        </p>
                                        <p class="mb-1"><strong>Event Date:</strong> {{ agenda_item.event.startDate|date('F j, Y') }}</p>
                                        {% if agenda_item.event.location %}
                                            <p class="mb-0"><strong>Event Location:</strong> {{ agenda_item.event.location }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="fas fa-cogs me-2"></i>Quick Actions
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="{{ path('admin_agenda_edit', {id: agenda_item.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-edit me-2"></i> Edit Item
                                </a>
                                
                                <form method="post" action="{{ path('admin_agenda_toggle_visibility', {id: agenda_item.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle-visibility-' ~ agenda_item.id) }}">
                                    <button type="submit" class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-{{ agenda_item.visible ? 'eye-slash' : 'eye' }} me-2"></i>
                                        {{ agenda_item.visible ? 'Hide Item' : 'Show Item' }}
                                    </button>
                                </form>
                                
                                <form method="post" action="{{ path('admin_agenda_duplicate', {id: agenda_item.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('duplicate-agenda-' ~ agenda_item.id) }}">
                                    <button type="submit" class="btn btn-outline-info w-100">
                                        <i class="fas fa-copy me-2"></i> Duplicate Item
                                    </button>
                                </form>

                                <hr>

                                <form method="post" action="{{ path('admin_agenda_delete', {id: agenda_item.id}) }}" class="d-inline delete-form">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-agenda-' ~ agenda_item.id) }}">
                                    <button type="submit" class="btn btn-outline-danger w-100">
                                        <i class="fas fa-trash me-2"></i> Delete Item
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="fas fa-eye me-2"></i>Public Preview
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="small">
                                <p class="mb-2">This is how the item appears to attendees:</p>
                                <div class="border rounded p-3 bg-light">
                                    {% if agenda_item.visible %}
                                        <div class="agenda-preview">
                                            <h6 class="mb-1">{{ agenda_item.title }}</h6>
                                            {% if agenda_item.startTime %}
                                                <div class="text-muted small mb-1">
                                                    <i class="fas fa-clock me-1"></i>
                                                    {{ agenda_item.startTime|date('g:i A') }}
                                                    {% if agenda_item.endTime %}
                                                        - {{ agenda_item.endTime|date('g:i A') }}
                                                    {% endif %}
                                                </div>
                                            {% endif %}
                                            {% if agenda_item.speaker %}
                                                <div class="text-muted small mb-1">
                                                    <i class="fas fa-user me-1"></i>{{ agenda_item.speaker }}
                                                </div>
                                            {% endif %}
                                            {% if agenda_item.presenter %}
                                                <div class="text-muted small mb-1">
                                                    <i class="fas fa-microphone me-1"></i>{{ agenda_item.presenter.name }}
                                                </div>
                                            {% endif %}
                                            {% if agenda_item.location %}
                                                <div class="text-muted small mb-1">
                                                    <i class="fas fa-map-marker-alt me-1"></i>{{ agenda_item.location }}
                                                </div>
                                            {% endif %}
                                            {% if agenda_item.description %}
                                                <div class="small mt-2">
                                                    {{ agenda_item.description|length > 100 ? agenda_item.description|slice(0, 100) ~ '...' : agenda_item.description }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% else %}
                                        <div class="text-center text-muted">
                                            <i class="fas fa-eye-slash mb-2"></i>
                                            <p class="mb-0">This item is hidden from attendees</p>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="fas fa-link me-2"></i>Related Items
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="small">
                                <a href="{{ path('admin_agenda_index', {eventId: agenda_item.event.id}) }}" class="btn btn-sm btn-outline-primary w-100 mb-2">
                                    <i class="fas fa-list me-1"></i> View All Agenda Items
                                </a>
                                <a href="{{ path('admin_event_show', {id: agenda_item.event.id}) }}" class="btn btn-sm btn-outline-secondary w-100">
                                    <i class="fas fa-calendar me-1"></i> Back to Event
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Delete confirmation
            document.querySelector('.delete-form')?.addEventListener('submit', function(e) {
                e.preventDefault();
                
                if (confirm('Are you sure you want to delete this agenda item? This action cannot be undone.')) {
                    this.submit();
                }
            });
        });
    </script>
{% endblock %}