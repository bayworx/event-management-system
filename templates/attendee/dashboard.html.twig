{% extends 'base.html.twig' %}

{% block title %}My Dashboard - {{ parent() }}{% endblock %}

{% block body %}
{{ include('_partials/company_logo_header.html.twig') }}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">Welcome, {{ attendee.name }}!</h1>
                    <small class="text-muted">Attendee Dashboard</small>
                </div>
                <div>
                    <a href="{{ path('event_show', {slug: event.slug}) }}" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Back to Event
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Event Info -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="bi bi-calendar-event"></i> {{ event.title }}</h5>
                </div>
                <div class="card-body">
                    {% if event.description %}
                        <p class="card-text">{{ event.description|slice(0, 200) }}{% if event.description|length > 200 %}...{% endif %}</p>
                    {% endif %}
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-calendar text-primary me-2"></i>
                                <div>
                                    <strong>Start:</strong><br>
                                    <small>{{ event.startDate|date('l, F j, Y \\a\\t g:i A') }}</small>
                                </div>
                            </div>
                        </div>
                        {% if event.endDate %}
                            <div class="col-md-6">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-calendar-check text-success me-2"></i>
                                    <div>
                                        <strong>End:</strong><br>
                                        <small>{{ event.endDate|date('l, F j, Y \\a\\t g:i A') }}</small>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    
                    {% if event.location %}
                        <div class="d-flex align-items-center mt-3">
                            <i class="bi bi-geo-alt text-info me-2"></i>
                            <div>
                                <strong>Location:</strong> {{ event.location }}
                            </div>
                        </div>
                    {% endif %}

                    <div class="mt-3">
                        <a href="{{ path('event_show', {slug: event.slug}) }}" class="btn btn-primary">
                            <i class="bi bi-eye"></i> View Full Event Details
                        </a>
                    </div>
                </div>
            </div>

            <!-- Event Materials -->
            {% if event.files|length > 0 %}
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-download"></i> Event Materials</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            {% for file in event.files %}
                                {% if file.isActive %}
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center p-3 bg-light rounded">
                                            <div class="me-3">
                                                {% if file.isImage %}
                                                    <i class="bi bi-image text-primary" style="font-size: 1.5rem;"></i>
                                                {% elseif file.isPdf %}
                                                    <i class="bi bi-file-pdf text-danger" style="font-size: 1.5rem;"></i>
                                                {% else %}
                                                    <i class="bi bi-file-earmark text-secondary" style="font-size: 1.5rem;"></i>
                                                {% endif %}
                                            </div>
                                            <div class="flex-grow-1 me-3">
                                                <h6 class="mb-1">{{ file.name }}</h6>
                                                <small class="text-muted">{{ file.formattedFileSize }}</small>
                                                {% if file.description %}
                                                    <br><small class="text-muted">{{ file.description }}</small>
                                                {% endif %}
                                            </div>
                                            {% if attendee.isVerified %}
                                                <a href="{{ path('event_file_download', {slug: event.slug, id: file.id}) }}" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-download"></i>
                                                </a>
                                            {% else %}
                                                <button class="btn btn-outline-secondary btn-sm" disabled title="Verify your email first">
                                                    <i class="bi bi-lock"></i>
                                                </button>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        
                        {% if not attendee.isVerified %}
                            <div class="alert alert-warning mt-3">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>Email verification required:</strong> Please check your email and click the verification link to download materials.
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Account Status -->
            <div class="card mb-4">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-person-check"></i> Account Status</h6>
                    
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Email Verified:</span>
                        {% if attendee.isVerified %}
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Verified
                            </span>
                        {% else %}
                            <span class="badge bg-warning">
                                <i class="bi bi-exclamation-triangle"></i> Pending
                            </span>
                        {% endif %}
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Event Check-in:</span>
                        {% if attendee.isCheckedIn %}
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Checked In
                            </span>
                        {% else %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-clock"></i> Not Checked In
                            </span>
                        {% endif %}
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Registered:</span>
                        <small>{{ attendee.registeredAt|date('M j, Y') }}</small>
                    </div>
                </div>
            </div>

            <!-- Personal Information -->
            <div class="card mb-4">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-person"></i> Personal Information</h6>
                    
                    <div class="mb-2">
                        <strong>Name:</strong><br>
                        <span>{{ attendee.name }}</span>
                    </div>
                    
                    <div class="mb-2">
                        <strong>Email:</strong><br>
                        <span>{{ attendee.email }}</span>
                    </div>
                    
                    {% if attendee.phone %}
                        <div class="mb-2">
                            <strong>Phone:</strong><br>
                            <span>{{ attendee.phone }}</span>
                        </div>
                    {% endif %}
                    
                    {% if attendee.organization %}
                        <div class="mb-2">
                            <strong>Organization:</strong><br>
                            <span>{{ attendee.organization }}</span>
                        </div>
                    {% endif %}
                    
                    {% if attendee.jobTitle %}
                        <div class="mb-0">
                            <strong>Job Title:</strong><br>
                            <span>{{ attendee.jobTitle }}</span>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-lightning"></i> Quick Actions</h6>
                    <div class="d-grid gap-2">
                        <a href="{{ path('event_show', {slug: event.slug}) }}" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i> View Event Page
                        </a>
                        {% if not attendee.isVerified %}
                            <form method="post" action="{{ path('attendee_login_link', {slug: event.slug}) }}">
                                <input type="hidden" name="email" value="{{ attendee.email }}">
                                <button type="submit" class="btn btn-outline-warning btn-sm w-100">
                                    <i class="bi bi-envelope"></i> Resend Verification Email
                                </button>
                            </form>
                        {% endif %}
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}