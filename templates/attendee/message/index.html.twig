{% extends 'base.html.twig' %}

{% block title %}My Messages{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1><i class="bi bi-envelope"></i> My Messages</h1>
                    <p class="text-muted mb-0">Messages for {{ event.title }}</p>
                </div>
                <div>
                    <a href="{{ path('attendee_message_contact_admin') }}" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Contact Admin
                    </a>
                    <a href="{{ path('attendee_message_new') }}" class="btn btn-outline-primary">
                        <i class="bi bi-envelope-plus"></i> New Message
                    </a>
                </div>
            </div>

            {% if messages|length > 0 %}
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Subject</th>
                                    <th>To</th>
                                    <th>Status</th>
                                    <th>Priority</th>
                                    <th>Sent</th>
                                    <th width="100">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for message in messages %}
                                    <tr>
                                        <td>
                                            <div>
                                                <strong>{{ message.subject }}</strong>
                                                {% if message.isReply %}
                                                    <span class="badge bg-info">Reply</span>
                                                {% endif %}
                                                <br><small class="text-muted">{{ message.getShortContent(60) }}</small>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                {{ message.recipient.name }}
                                                <br><small class="text-muted">{{ message.recipient.email }}</small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ message.priorityColor }}">
                                                {{ message.statusLabel }}
                                            </span>
                                            {% if message.readAt %}
                                                <br><small class="text-muted">Read: {{ message.readAt|date('M j, g:i A') }}</small>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ message.priorityColor }}">
                                                {{ message.priorityLabel }}
                                            </span>
                                        </td>
                                        <td>
                                            <small>{{ message.sentAt|date('M j, Y g:i A') }}</small>
                                        </td>
                                        <td>
                                            <a href="{{ path('attendee_message_show', {id: message.id}) }}" 
                                               class="btn btn-sm btn-outline-primary" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(messages) }}
                </div>
            {% else %}
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card text-center">
                            <div class="card-body py-5">
                                <i class="bi bi-envelope display-1 text-muted mb-3"></i>
                                <h3>No Messages Yet</h3>
                                <p class="text-muted mb-4">
                                    You haven't sent any messages to the event administrators yet. 
                                    Need help or have questions about {{ event.title }}?
                                </p>
                                <div class="d-flex gap-2 justify-content-center">
                                    <a href="{{ path('attendee_message_contact_admin') }}" class="btn btn-primary">
                                        <i class="bi bi-chat-dots"></i> Contact Admin
                                    </a>
                                    <a href="{{ path('attendee_message_new') }}" class="btn btn-outline-primary">
                                        <i class="bi bi-envelope-plus"></i> Send Message
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Quick Contact Modal -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <button class="btn btn-primary rounded-circle shadow" data-bs-toggle="modal" data-bs-target="#quickMessageModal" title="Quick Message">
            <i class="bi bi-chat-dots fs-5"></i>
        </button>
    </div>

    <!-- Quick Message Modal -->
    <div class="modal fade" id="quickMessageModal" tabindex="-1" aria-labelledby="quickMessageModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="quickMessageModalLabel">Quick Message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="quickMessageForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="quickSubject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="quickSubject" name="subject" 
                                   value="Quick question about {{ event.title }}" required>
                        </div>
                        <div class="mb-3">
                            <label for="quickMessage" class="form-label">Message</label>
                            <textarea class="form-control" id="quickMessage" name="message" rows="4" 
                                      placeholder="Your message..." required></textarea>
                        </div>
                        <div class="alert alert-info">
                            <small><i class="bi bi-info-circle"></i> This message will be sent to all event administrators.</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('quickMessageForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const submitBtn = this.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status"></span>Sending...';
    
    fetch('{{ path("attendee_message_quick") }}', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Show success message
            const modal = bootstrap.Modal.getInstance(document.getElementById('quickMessageModal'));
            modal.hide();
            
            // Reset form
            this.reset();
            document.getElementById('quickSubject').value = 'Quick question about {{ event.title }}';
            
            // Show toast or alert
            alert(data.message);
            
            // Reload page to show new message
            window.location.reload();
        } else {
            alert('Error: ' + data.message);
        }
    })
    .catch(error => {
        alert('Error sending message. Please try again.');
        console.error('Error:', error);
    })
    .finally(() => {
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
    });
});
</script>
{% endblock %}