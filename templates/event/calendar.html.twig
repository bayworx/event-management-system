{% extends 'event_base.html.twig' %}

{% block title %}Event Calendar - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/featured-events.css') }}">
    <style>
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background-color: #dee2e6;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            overflow: hidden;
        }
        
        .calendar-header {
            background-color: #e9ecef;
            padding: 0.75rem 0.5rem;
            text-align: center;
            font-weight: 600;
            font-size: 0.875rem;
            color: #495057;
        }
        
        .calendar-day {
            background-color: #fff;
            min-height: 120px;
            padding: 0.5rem;
            position: relative;
            transition: background-color 0.15s ease-in-out;
        }
        
        .calendar-day:hover {
            background-color: #f8f9fa;
        }
        
        .calendar-day.other-month {
            background-color: #f8f9fa;
            color: #6c757d;
        }
        
        .calendar-day.today {
            background-color: #e3f2fd;
            border: 2px solid #2196f3;
        }
        
        .day-number {
            font-weight: 600;
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
            color: inherit;
        }
        
        .event-item {
            background-color: #007bff;
            color: white;
            padding: 0.125rem 0.25rem;
            margin-bottom: 0.125rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            line-height: 1.2;
            cursor: pointer;
            transition: background-color 0.15s ease-in-out;
            text-decoration: none;
            display: block;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
        
        .event-item:hover {
            background-color: #0056b3;
            color: white;
            text-decoration: none;
        }
        
        .event-item.event-today {
            background-color: #28a745;
        }
        
        .event-item.event-past {
            background-color: #6c757d;
        }
        
        .more-events {
            font-size: 0.6875rem;
            color: #6c757d;
            text-align: center;
            margin-top: 0.125rem;
        }
        
        .calendar-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }
        
        .month-nav {
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .month-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
            min-width: 200px;
            text-align: center;
        }
        
        .view-toggle {
            display: flex;
            gap: 0.5rem;
        }
        
        @media (max-width: 768px) {
            .calendar-day {
                min-height: 80px;
                padding: 0.25rem;
            }
            
            .calendar-header {
                padding: 0.5rem 0.25rem;
                font-size: 0.75rem;
            }
            
            .event-item {
                font-size: 0.6875rem;
                padding: 0.0625rem 0.125rem;
            }
            
            .calendar-controls {
                flex-direction: column;
                gap: 1rem;
            }
            
            .month-nav {
                order: 2;
            }
            
            .view-toggle {
                order: 1;
            }
        }
    </style>
{% endblock %}

{% block body %}
{{ include('_partials/company_logo_header.html.twig') }}

<div class="container my-4">
    <!-- Featured Events Banner -->
    {{ include('components/featured_events_banner.html.twig', { display_type: 'banner' }) }}
    
    <div class="row">
        <div class="col-12">
            <div class="calendar-controls">
                <div class="view-toggle">
                    <a href="{{ path('events_list') }}" class="btn btn-outline-primary">
                        <i class="bi bi-list"></i> List View
                    </a>
                    <a href="{{ path('events_calendar') }}" class="btn btn-primary">
                        <i class="bi bi-calendar-month"></i> Calendar View
                    </a>
                    
                    <!-- Calendar Subscription -->
                    <div class="dropdown">
                        <button class="btn btn-outline-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-calendar-plus"></i> Subscribe
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <h6 class="dropdown-header">
                                    <i class="bi bi-info-circle"></i> Add to your calendar
                                </h6>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('calendar_subscribe') }}" target="_blank">
                                    <i class="bi bi-download"></i> Download (.ics)
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" onclick="copyToClipboard('{{ path('calendar_feed', [], true) }}'); return false;">
                                    <i class="bi bi-link-45deg"></i> Copy Feed URL
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="month-nav">
                    <a href="{{ path('events_calendar', prevMonth) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                    <h1 class="month-title">{{ monthName }} {{ currentYear }}</h1>
                    <a href="{{ path('events_calendar', nextMonth) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
                
                <div class="d-flex gap-2">
                    <a href="{{ path('events_calendar') }}" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-house"></i> Today
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="calendar-grid">
                <!-- Calendar Headers -->
                <div class="calendar-header">Sunday</div>
                <div class="calendar-header">Monday</div>
                <div class="calendar-header">Tuesday</div>
                <div class="calendar-header">Wednesday</div>
                <div class="calendar-header">Thursday</div>
                <div class="calendar-header">Friday</div>
                <div class="calendar-header">Saturday</div>
                
                <!-- Calendar Days -->
                {% for week in calendar %}
                    {% for day in week %}
                        <div class="calendar-day {% if not day.isCurrentMonth %}other-month{% endif %} {% if day.isToday %}today{% endif %}">
                            <div class="day-number">{{ day.day }}</div>
                            
                            {% set maxVisible = 3 %}
                            {% for event in day.events|slice(0, maxVisible) %}
                                {% set isToday = event.startDate|date('Y-m-d') == 'now'|date('Y-m-d') %}
                                {% set isPast = event.startDate < date() %}
                                <a href="{{ path('event_show', {slug: event.slug}) }}" 
                                   class="event-item {% if isToday %}event-today{% elseif isPast %}event-past{% endif %}"
                                   data-bs-toggle="tooltip" 
                                   data-bs-placement="top"
                                   title="{{ event.title }} - {{ event.startDate|date('g:i A') }}{% if event.location %} at {{ event.location }}{% endif %}">
                                    {{ event.title }}
                                </a>
                            {% endfor %}
                            
                            {% if day.events|length > maxVisible %}
                                <div class="more-events">
                                    +{{ day.events|length - maxVisible }} more
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
    
    <!-- Legend -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title mb-3">Legend</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <div class="event-item me-2" style="width: 20px; height: 20px; display: inline-block;"></div>
                                <small>Upcoming Events</small>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <div class="event-item event-today me-2" style="width: 20px; height: 20px; display: inline-block;"></div>
                                <small>Today's Events</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <div class="event-item event-past me-2" style="width: 20px; height: 20px; display: inline-block;"></div>
                                <small>Past Events</small>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <div class="calendar-day today me-2" style="width: 20px; height: 20px; display: inline-block; border: 2px solid #2196f3;"></div>
                                <small>Today</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Event Details Modal -->
<div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eventModalLabel">Event Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="eventModalBody">
                <!-- Event details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="#" class="btn btn-primary" id="viewEventBtn">View Event</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/calendar-subscription.js') }}"></script>
    <script src="{{ asset('js/featured-events-banner.js') }}"></script>
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl, {
                container: 'body'
            });
        });
        
        
        // Optional: Add click handler for calendar days to show more events
        document.addEventListener('DOMContentLoaded', function() {
            // Handle keyboard navigation
            document.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowLeft') {
                    document.querySelector('.month-nav a:first-child').click();
                } else if (e.key === 'ArrowRight') {
                    document.querySelector('.month-nav a:last-child').click();
                }
            });
        });
    </script>
{% endblock %}